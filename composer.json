{
    "name": "uxmansarwar/response",
    "description": "A lightweight PHP response handler for structured API responses.",
    "keywords": [
        "php",
        "response",
        "api",
        "response handler",
        "error handling",
        "json response",
        "response collector"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Uxman Sarwar",
            "email": "uxmansrwr@gmail.com",
            "homepage": "https://github.com/uxmansarwar"
        }
    ],
    "config": {
        "sort-packages": true,
        "prefer-stable": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "UxmanSarwar\\": "src/"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.35",
        "pestphp/pest": "^2.34",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^10.4"
    },
    "minimum-stability": "stable"
}
